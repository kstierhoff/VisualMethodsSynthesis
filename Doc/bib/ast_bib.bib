@Article{Demer2014,
  author        = {Demer, D. A. and Zwolinski, J. P.},
  title         = {{Corroboration and refinement of a method for differentiating landings from two stocks of Pacific sardine (\textit{Sardinops sagax}) in the California Current}},
  journal       = {ICES Journal of Marine Science},
  year          = {2014},
  volume        = {71},
  number        = {2},
